<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_people_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@color/cardview_shadow_end_color"
        android:foreground="@color/cardview_shadow_end_color"
        app:cardCornerRadius="8dp"
        app:cardElevation="40dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_peoples_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="Id"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="casual"
                android:textColor="#00B8D4"/>

            <TextView
                android:id="@+id/tv_peoples_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:fontFamily="casual"
                android:text="People Name"
                android:textColor="#00B8D4"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tv_peoples_id"
                android:layout_marginTop="9dp" />

            <TextView
                android:id="@+id/tv_peoples_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peoples Number"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="casual"
                android:textColor="#00B8D4"
                android:layout_below="@+id/tv_peoples_name"
                android:layout_alignStart="@+id/tv_peoples_name"
                android:layout_marginTop="8dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>